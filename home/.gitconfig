[user]
	email = sagotsky@gmail.com
  name = Jon Sagotsky
[core]
  editor = nvim
	excludesfile = /home/sagotsky/.gitignore_global
[color]
  status = auto
  diff = auto
  branch = auto
[alias]
  co = checkout
  st = status
  cp = cherry-pick
  logs = log -p -S
  ls-branch = ! ~/scripts/git/git-ls-branch.sh
  what-branch=! ~/scripts/git/git-what-branch.sh

[push]
  default = tracking
[grep]
	extendRegexp = true
	lineNumber = true
[help]
	autocorrect = 5
[diff]
  #external = git-meld
  #external = vimdiff
; [branch]
; 	autosetuprebase = always
[pull]
  rebase = true
