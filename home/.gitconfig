[user]
	email = sagotsky@gmail.com
  name = Jon Sagotsky
[core]
  editor = nvim
	excludesfile = /home/sagotsky/.gitignore_global
[color]
  status = auto
  diff = auto
  branch = auto
[alias]
  co = checkout
  st = status
  cp = cherry-pick
  logs = log -p -S

  remaster =    ! git fetch && git rebase -i origin/master
  what-branch = ! ~/scripts/git/git-what-branch.sh
  wip =         ! git commit -m 'wip' && git stash -u -k && git rebase -i HEAD^^ && git stash pop
  prune-branches = ! git branch -d $(git branch --merged=master | grep -v ' master')


[push]
	default = current
[grep]
	extendRegexp = true
	lineNumber = true
[help]
	autocorrect = 5
[diff]
  #external = git-meld
  #external = vimdiff
; [branch]
; 	autosetuprebase = always
[pull]
  rebase = true
