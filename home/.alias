###aliases

alias .='source '
alias ack='ack-grep '
alias appleterm='/usr/lib/xscreensaver/apple2 -text -program bash -fast'
alias bd='popd'
alias bell="echo -e '\a'"
alias cmus='TERM=xterm-256color cmus'
alias dot="git --git-dir='$HOME/.dotfiles/.git' --work-tree='$HOME/.dotfiles/' " # work-tree isn't honored by pull in 1.7.2.5.  Works in 1.7.9.3
alias fn='find ./ -name '
alias fontcache-refresh=' fc-cache -f'
alias gg='git grep -i -I -n --color --break --heading --line-number -e '
alias lag='ag --pager less '
alias ls='ls --color=auto'
alias mkpasswd='pwgen -ysCn 16'
alias myip='curl http://icanhazip.com ; echo'
alias nounity='UBUNTU_MENUPROXY="" '
alias nv='TERM=xterm-256color nvim'
alias tf='tail -f'
alias rb="rhythmbox-client "
alias slrake='bundle exec $( rake -T | slmenu_hist.sh rake -l 20 -i |  sed -e "s/\w*#.*//" )'
alias sudo='sudo ' # preserve aliases in a sudo
alias t='tmux -2'
alias tx='tmux -2 attach'
alias wgetr="wget -r -np -nH â€“cut-dirs=3 -R index.html"
alias v='nv '
alias vw='nv -c VimwikiIndex'
alias vnc-server='x11vnc -usepw'
alias xsel='xsel --logfile ~/.Xsel.log'
alias :e='nv '
alias :q='exit'
alias :Q='exit'


# aliases CAN do args
alias arg="sh -c 'echo \$3 \$2 \$1' --"

