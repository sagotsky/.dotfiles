alias rb="rhythmbox-client "
alias slrake='bundle exec $( rake -T | slmenu_hist.sh rake -l 20 -i |  sed -e "s/\w*#.*//" )'
alias sudo='sudo ' # force alias preservation, no really
alias systemctl='sudo systemctl'
alias t='tmux -2'
