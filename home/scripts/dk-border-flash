#!/bin/bash

set_color() {
 dkcmd set border colour outer_focus="$1" focus="$1"
 sleep 0.04
}

# set_color \#ddddee
set_color \#ccccdd
set_color \#bbbbaa
set_color \#aaaabb
set_color \#999999
set_color \#888888
set_color \#777777

