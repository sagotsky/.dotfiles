#key, name?, cmd, message
# man zshzle
bind_key_cmd_hint() {
  zle_highlight+=('bg=blue')
  keys=$1
  widget_function=$1
  cmd=$2
  hint=$3

  cat <<-EOF
    ${widget_function}() {
      zle -U '${cmd} ' # types characters
      zle -M '${hint}' # message.
    }

    zle -N ${keys} # make it a widget, i think.  maybe the second key isn't needed?
    bindkey '\e${keys}' '${widget_function}'
EOF
 }

eval "`bind_key_cmd_hint 'rgm' 'rails g migration'  'rails g migration AddPartNumberToProducts field:type:index'`"
eval "`bind_key_cmd_hint 'rgc' 'rails g controller new edit create delete show'  'rails g controller NAME action action action '`"
eval "`bind_key_cmd_hint 'rgt' 'rails g one_off_task'  'rails g one_off_task NAME'`"

function tddium_wait() {
  if [[ $# == 0 ]] ; then 
    BRANCH="$(git rev-parse --abbrev-ref HEAD)"
  else 
    BRANCH=$1
  fi

  echo "waiting for $BRANCH"
  while tddium status --no-json | grep $BRANCH | grep running ; do
    sleep 60
  done
}

