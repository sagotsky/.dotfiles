#key, name?, cmd, message
bind_key_cmd_hint() {
  key=$1
  cmd=$2
  hint=$3

  cat <<-EOF
    ${key}() {
      zle -U '${cmd} '
      zle -M '${hint}'
    }

    zle -N ${key} ${key}
    bindkey '\e${key}' '${key}'
EOF
 }

eval "`bind_key_cmd_hint 'rgm' 'rails g migration'  'rails g migration AddPartNumberToProducts part_number:string:index'`"
eval "`bind_key_cmd_hint 'rgc' 'rails g controller new edit create delete show'  'rails g controller NAME action action action '`"
eval "`bind_key_cmd_hint 'rgt' 'rails g one_off_task'  'rails g one_off_task NAME'`"

function tddium_wait() {
  if [[ $# == 0 ]] ; then 
    BRANCH="$(git rev-parse --abbrev-ref HEAD)"
  else 
    BRANCH=$1
  fi

  echo "waiting for $BRANCH"
  while tddium status --no-json | grep $BRANCH | grep running ; do
    sleep 60
  done
}
